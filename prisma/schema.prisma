datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model CoverToken {
  id          String   @id @default(uuid())
  token       String   @unique
  companyName String
  email       String
  expiresAt   DateTime
  used        Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model AdminOtp {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}

model AdminAccess {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("admin_access") // <- actual table name in DB
}

model Project {
  id          Int      @id @default(autoincrement())
  slug        String?  @unique
  title       String
  client      String?
  type        String?
  technology  String?
  role        String?
  image       String?
  description String?
  highlights  Json?
  links       Json?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")
  published   Boolean  @default(true)

  @@map("projects") // maps model to "projects" table
}

